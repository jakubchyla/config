# vim: set ft=dosini:
[bar/mybar]
monitor = LVDS-1
background = #bb3f3f3f
separator = " | "   
font-0 = "mononoki:size=10:weight=bold;0"
font-1 = "FontAwesome:size=10:weight=bold;0"

modules-left = i3
modules-center = memory cpu
modules-right = pulseaudio-alsa wireless-network wired-network battery date


[module/date]
type = internal/date
date = %d-%m-%Y%
time = %H:%M
format = <label>
label = "%date% %time% "


[module/battery]
type = internal/battery

full-at = 95
battery = BAT0
adapter = AC
time-format = %H:%M

format-charging = <animation-charging> <label-charging>
label-charging = Charging %percentage%%

format-discharging = <animation-discharging> <label-discharging>
label-discharging = Discharging %percentage%%

format-full = <label-full>
label-full = Fully Charged

animation-charging-0 = %{T2}%{T-}
animation-charging-1 = %{T2}%{T-}
animation-charging-2 = %{T2}%{T-}
animation-charging-3 = %{T2}%{T-}
animation-charging-4 = %{T2}%{T-}
animation-charging-framerate = 1000

animation-discharging-0 = %{T2}%{T-}
animation-discharging-1 = %{T2}%{T-}
animation-discharging-2 = %{T2}%{T-}
animation-discharging-3 = %{T2}%{T-}
animation-discharging-4 = %{T2}%{T-}
animation-discharging-framerate = 1000


[module/wired-network]
type = internal/network
interface = enp0s25
interval = 5.0

format-connected = <label-connected>
label-connected = Wired: Connected

format-disconnected = <label-disconnected>
label-disconnected = Wired: Disconnected


[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 5.0

format-connected = <label-connected>
label-connected = Wi-Fi: %essid%

format-disconnected = <label-disconnected>
label-disconnected = Wi-Fi: Disconnected


[module/pulseaudio-alsa]
type = internal/pulseaudio

sink = alsa_output.pci-0000_00_1b.0.analog-stereo
use-ui-max = true
interval = 5

format-volume = <label-volume>
label-volume = Volume: %percentage%%

format-muted = <label-muted>
label-muted = Muted: %percentage%%


[module/pulseaudio-bluez]
type = internal/pulseaudio

sink = bluez.sink.18_11_15_32_10_75.a2dp_sink
use-ui-max = true
interval = 5

format-volume = <label-volume>
label-volume = Bluez: %percentage%%

format-muted = <label-muted>
label-muted =  Bluez: %percentage%%


[module/memory]
type = internal/memory

interval = 3
format = <label>
label = RAM: %percentage_used%% %gb_used%/%gb_total%


[module/temperature_core0]
type = internal/temperature

interval = 0.5
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp2_input
label = Core 0: %temperature-c%


[module/temperature_core1]
type = internal/temperature

interval = 0.5
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp3_input
label = Core 1: %temperature-c%


[module/cpu]
type = internal/cpu

interval = 0.5
format = <label> <ramp-coreload>
label = CPU %percentage%%

ramp-coreload-spacing = 1
ramp-coreload-0 = %{T2}▁%{T-} 
ramp-coreload-1 = %{T2}▂%{T-}
ramp-coreload-2 = %{T2}▃%{T-}
ramp-coreload-3 = %{T2}▄%{T-}
ramp-coreload-4 = %{T2}▅%{T-}
ramp-coreload-5 = %{T2}▆%{T-}
ramp-coreload-6 = %{T2}▇%{T-}
ramp-coreload-7 = %{T2}█%{T-}



[module/i3]
type = internal/i3
pin-workspaces = true
wrapping-scroll = false
index-sort = true
ws-icon-0 = 1
ws-icon-1 = 2
ws-icon-2 = 3
ws-icon-3 = 4
ws-icon-4 = 5
ws-icon-5 = 6
ws-icon-6 = 7
ws-icon-7 = 8
ws-icon-8 = 9
ws-icon-9 = 0

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = #3f3f3f
label-focused-underline = #fba922
label-focused-padding = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-unfocused = %index%
label-unfocused-padding = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 1

; Separator in between workspaces
label-separator = |
label-separator-padding = 1
label-separator-foreground = #ffb52a
